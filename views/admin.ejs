<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="css/stle.css" />
<script src="https://kit.fontawesome.com/d29c031c77.js" crossorigin="anonymous"></script>

</head>

<body>
    <div class="addproduct">
        <h1>Add Product</h1>
        <form action="/admin" method="post" enctype="multipart/form-data">
            <table>
                <tr>
                    <td>
                        <div class="item">
                            <input type="file" name="image">
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <div class="item">
                            <label>Product name:</label>
                            <input type="text" placeholder="fresh onion" name="name">
                        </div>
                    </td>
                    <td>
                        <div class="item">
                            <label>Price range:</label>
                            <input type="text" placeholder="$1.00/- - 10.99/-" name="priceRange">
                        </div>
                    </td>
                    <td>
                        <div class="item">
                            <label>Current price:</label>
                            <input type="text" placeholder="current price ($1.00)" name="currentPrice">
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <button class="toAdd" type="submit">ADD</button>
                    </td>
                </tr>
            </table>
        </form>
    </div>

    <% first_array.forEach(user => { %>
        <form method="post" action="/deleteDoneOrder">
            <div class="Main_User_info">
                <h2>User Info:</h2>
                <input type="hidden" name="idtodeleteorder" value="<%= user._id %>">
                <p>Name: <%= user.name %></p>
                <p>Address: <%= user.address %></p>
                <p>Mobile: <%= user.mobile %></p>
                <h3>Orders:</h3>
                <% user.order.forEach(order => { %>
                    <div class="nested_main">
                        <div><img src="<%= order.image %>" alt="<%= order.name %>"></div>
                        <div class="info_item"><p>Name: <%= order.name %></p>
                        <p>Quantity: <%= order.quantity %></p></div>
                    </div>
                <% }); %>
                <div><button class="todelorder" type="submit"><i class="fa-solid fa-trash fa-beat"></i></button></div>
            </div>
        </form>
    <% }); %>
</body>

</html>